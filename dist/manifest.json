{
  "manifest_version": 2,
  "name": "Trove",
  "description": "A hidden layer of the internet.",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "36": "icon/icon36.png",
    "48": "icon/icon48.png",
    "60": "icon/icon60.png",
    "72": "icon/icon72.png",
    "96": "icon/icon96.png",
    "114": "icon/icon114.png",
    "120": "icon/icon120.png",
    "128": "icon/icon128.png",
    "144": "icon/icon144.png",
    "152": "icon/icon152.png",
    "180": "icon/icon180.png",
    "192": "icon/icon192.png",
    "310": "icon/icon310.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*", 
      "https://trove.so/*",
      "https://www.trove.so/*",
      "https://development.trove.so/*",
      "https://demo.trove.so/*"
    ]
  }
}